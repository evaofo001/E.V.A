modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "EVA Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "EVA Backend"

[[workflows.workflow]]
name = "EVA Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "EVA Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn api.main:app --host 127.0.0.1 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
exposeLocalhost = true

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "preview", "--prefix", "frontend", "--", "--host", "0.0.0.0", "--port"]
build = ["npm", "run", "build", "--prefix", "frontend"]
